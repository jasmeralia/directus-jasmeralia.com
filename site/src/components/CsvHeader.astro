---
const { title, count, csvHref, csvName } = Astro.props;
const label = typeof count === "number" ? `${title} (${count})` : title;
---

<div class="header">
  <h1>{label}</h1>
  {csvHref ? (
    <a class="csv-link" href={csvHref} download={csvName} aria-label="Download CSV">
      CSV
    </a>
  ) : null}
</div>

<style>
  .header{display:flex;align-items:center;justify-content:space-between;gap:12px;flex-wrap:wrap;}
  .csv-link{border:1px solid #2b2b2b;border-radius:999px;padding:4px 10px;text-decoration:none;font-size:.8rem;color:#9aa6ff;}
  .csv-link:hover{border-color:#3a3a3a;}
</style>
