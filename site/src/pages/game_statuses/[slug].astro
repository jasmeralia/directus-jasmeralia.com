---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { directusFetchItems, fileUrl } from "../../lib/directus";

const STATUS_OPTIONS = [
  { slug: "unreleased", label: "Unreleased" },
  { slug: "in_development", label: "In Development" },
  { slug: "abandoned", label: "Abandoned" },
  { slug: "completed", label: "Completed" },
];

export async function getStaticPaths() {
  return [
    { params: { slug: "unreleased" } },
    { params: { slug: "in_development" } },
    { params: { slug: "abandoned" } },
    { params: { slug: "completed" } },
  ];
}

const { slug } = Astro.params;
const label = STATUS_OPTIONS.find((status) => status.slug === slug)?.label;
if (!label) {
  throw new Error(`Unknown game status: ${slug}`);
}

const games = await directusFetchItems("games", {
  fields: ["id", "title", "slug", "cover_image.id", "cover_image.filename_disk"],
  filter: { game_status: { _eq: slug } },
  sort: ["title"],
  limit: 500,
});
---

<BaseLayout title={label}>
  <div slot="head">
    <style>
      main{padding:2rem;max-width:1100px;margin:0 auto;}
      .grid{display:grid;grid-template-columns:repeat(auto-fill,minmax(220px,1fr));gap:1rem;}
      .card{border:1px solid #2b2b2b;border-radius:12px;overflow:hidden;background:#111;}
      .card a{color:inherit;text-decoration:none;display:block;}
      .thumb{aspect-ratio:2/3;background:#000;display:flex;align-items:center;justify-content:center;}
      .thumb img{width:100%;height:100%;object-fit:contain;display:block;}
      .meta{padding:.75rem 1rem;}
      .title{font-weight:700;}
    </style>
  </div>
  <main>
      <h1>{label}</h1>
      {games.length === 0 ? (
        <p>No games found for this status.</p>
      ) : (
        <div class="grid">
          {games.map((g) => {
            const img = g.cover_image ? fileUrl(g.cover_image as any) : null;
            return (
              <div class="card">
                <a href={`/games/${g.slug}/index.html`}>
                  <div class="thumb">
                    {img ? <img src={img} alt={g.title} loading="lazy" /> : <span>No cover</span>}
                  </div>
                  <div class="meta">
                    <div class="title">{g.title}</div>
                  </div>
                </a>
              </div>
            );
          })}
        </div>
      )}
  </main>
</BaseLayout>
